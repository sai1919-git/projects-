pipeline {
    agent any

    environment {
        ECR_URI = "641944126006.dkr.ecr.ap-south-1.amazonaws.com/project-6"
        IMAGE_NAME = "myimage"
        AWS_REGION = "ap-south-1"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/sai1919-git/projects'
            }
        }

       stage('SonarQube Analysis') {
    steps {
        withSonarQubeEnv('sonarqube') {
            dir('project/project-6') {
                sh """
                echo "Using Sonar Scanner at $SONAR_SCANNER_HOME"
                $SONAR_SCANNER_HOME/bin/sonar-scanner \
                  -Dsonar.projectKey=project-6 \
                  -Dsonar.sources=.
                """
            }
        }
    }
}


        stage('Quality Gate') {
            steps {
                timeout(time: 3, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('project/project-6') {
                    sh "docker build -t $IMAGE_NAME ."
                }
            }
        }

        stage('Login to ECR') {
            steps {
                sh """
                aws ecr get-login-password --region $AWS_REGION | \
                docker login --username AWS --password-stdin $ECR_URI
                """
            }
        }

        stage('Push to ECR') {
            steps {
                sh """
                # Ensure repository exists
                aws ecr create-repository --repository-name project-6 --region $AWS_REGION || true

                # Tag and push
                docker tag $IMAGE_NAME:latest $ECR_URI:latest
                docker push $ECR_URI:latest
                """
            }
        }

        stage('Deploy to EKS') {
            steps {
                dir('project/project-6') {
                    sh """
                    # Replace IMAGE_URI in deployment.yaml with actual ECR image
                    sed -i 's|IMAGE_URI|$ECR_URI:latest|g' deployment.yaml

                    # Apply deployment and service
                    kubectl apply -f deployment.yaml
                    kubectl apply -f service.yaml
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully! üéâ"
        }
        failure {
            echo "Pipeline failed! ‚ùå Check logs for details."
        }
    }
}

